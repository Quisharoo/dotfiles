  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git switch:*)",
      "Bash(git checkout:*)",
      "Bash(npm ci:*)",
      "Bash(npm run:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(printf:*)",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(touch:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Edit({{HOME}}/.zshrc)",
      "Write({{HOME}}/.zshrc)",
      "Read({{HOME}}/.zshrc)",
      "Edit({{DOTFILES_DIR}}/home/.zshrc)",
      "Write({{DOTFILES_DIR}}/home/.zshrc)",
      "Read({{DOTFILES_DIR}}/home/.zshrc)",
      "Bash(source ~/.zshrc)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(rm:*)",
      "Bash(docker build:*)",
      "Bash(docker run:*)",
      "Bash(curl:*)",
      "Bash(wget:*)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm -rf /*:*)",
      "Bash(chmod -R 777:*)",
      "Bash(curl *| bash:*)",
      "Bash(wget *| bash:*)"
    ]
  },
  "edit": {
    "allow": ["./**"],
    "deny": ["../**", "/**", "~/**", ".git/**", "node_modules/**", "dist/**", "build/**"]
  },
  "read": {
    "deny": ["/**", "~/**"]
  },
  "webfetch": {
    "allow": ["registry.npmjs.org", "api.github.com", "raw.githubusercontent.com", "github.com"],
    "deny": ["169.254.169.254"]
  }
}
